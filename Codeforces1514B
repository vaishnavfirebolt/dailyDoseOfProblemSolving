import java.util.*;
public class B {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		long mod = (long) 1e9 + 7;
		for(int tt = 0 ;tt <t ;tt++) {
			int n = sc.nextInt() , k = sc.nextInt();

			long ans = 1;
			for (int i = 0; i < k; i++) ans = (ans * n) % mod;
			System.out.println(ans);		
			
		}
	}
}
